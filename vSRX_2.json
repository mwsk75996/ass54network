version 12.1X47-D15.4;

system {
    host-name vSRX_2;
    root-authentication {
        encrypted-password "$1$4TkbZDtp$6E8C6Bg7K6gnHR31XnJjl0";
    }
}

interfaces {
    ge-0/0/1 {
        unit 0 {
            family inet {
                address 192.168.12.1/24;
            }
        }
    }
    ge-0/0/2 {
        unit 0 {
            family inet {
                address 192.168.13.1/24;
            }
        }
    }
    ge-0/0/3 {
        unit 0 {
            family inet {
                address 10.10.10.2/24;
            }
        }
    }
}

routing-options {
    static {
        route 192.168.10.0/24 next-hop 10.10.10.1;
        route 192.168.11.0/24 next-hop 10.10.10.1;
    }
}

security {
    address-book {
        global {
            address ACTUATOR_LAN_A 192.168.12.0/24;
            address ACTUATOR_LAN_B 192.168.13.0/24;
            address WEB_SERVER 192.168.11.2/32;
            address PC1 192.168.10.2/32;
            address PC2 192.168.11.2/32;
            address PC3 192.168.12.2/32;
            address PC4 192.168.13.2/32;
            address INTER_LAN 10.10.10.0/24;
        }
    }
    policies {
        from-zone myTrust_2 to-zone myTrust_2 {
            policy allow-pc1-pc2-to-pc3-pc4 {
                match {
                    source-address [ PC1 PC2 ];
                    destination-address [ PC3 PC4 ];
                    application any;
                }
                then {
                    permit;
                }
            }
            policy allow-pc3-pc4-internal {
                match {
                    source-address [ PC3 PC4 ];
                    destination-address [ PC3 PC4 ];
                    application any;
                }
                then {
                    permit;
                }
            }
            policy allow-pc3-to-inter-lan-only {
                match {
                    source-address PC3;
                    destination-address INTER_LAN;
                    application [ junos-icmp-ping junos-udp-any ];
                }
                then {
                    permit;
                }
            }
            policy allow-pc4-to-inter-lan {
                match {
                    source-address PC4;
                    destination-address INTER_LAN;
                    application [ junos-icmp-ping junos-udp-any ];
                }
                then {
                    permit;
                }
            }
            policy allow-pc4-http-to-webserver {
                match {
                    source-address PC4;
                    destination-address WEB_SERVER;
                    application [ junos-http my-http-8000 ];
                }
                then {
                    permit;
                }
            }
        }
        default-policy {
            deny-all;
        }
    }
    zones {
        security-zone myTrust_2 {
            interfaces {
                ge-0/0/1.0;
                ge-0/0/2.0;
                ge-0/0/3.0;
            }
            host-inbound-traffic {
                system-services {
                    ping;
                    traceroute;
                }
            }
        }
    }
}

applications {
    application my-http-8000 {
        application-protocol http;
        protocol tcp;
        destination-port 8000;
    }
}