version 12.1X47-D15.4;

system {
    host-name vSRX_1;
    root-authentication {
        encrypted-password "$1$4TkbZDtp$6E8C6Bg7K6gnHR31XnJjl0";
    }
}

interfaces {
    ge-0/0/1 {
        unit 0 {
            family inet {
                address 192.168.10.1/24;
            }
        }
    }
    ge-0/0/2 {
        unit 0 {
            family inet {
                address 192.168.11.1/24;
            }
        }
    }
    ge-0/0/3 {
        unit 0 {
            family inet {
                address 10.10.10.1/24;
            }
        }
    }
}

routing-options {
    static {
        route 192.168.12.0/24 next-hop 10.10.10.2;
        route 192.168.13.0/24 next-hop 10.10.10.2;
    }
}

security {
    address-book {
        global {
            address SENSOR_LAN 192.168.10.0/24;
            address SERVER_LAN 192.168.11.0/24;
            address WEB_SERVER 192.168.11.2/32;
            address PC1 192.168.10.2/32;
            address PC2 192.168.11.2/32;
            address PC3 192.168.12.2/32;
            address PC4 192.168.13.2/32;
            address INTER_LAN 10.10.10.0/24;
        }
    }
    policies {
        from-zone SENSOR_LAN to-zone SERVER_LAN {
            policy allow-pc1-to-server-lan {
                match {
                    source-address any;
                    destination-address any;
                    application [ junos-icmp-ping junos-udp-any junos-http my-http-8000 ];
                }
                then {
                    permit;
                }
            }
        }
        from-zone SENSOR_LAN to-zone INTER_LAN_1 {
            policy allow-pc1-to-inter-lan {
                match {
                    source-address any;
                    destination-address any;
                    application [ junos-icmp-ping junos-udp-any ];
                }
                then {
                    permit;
                }
            }
        }
        from-zone SERVER_LAN to-zone SENSOR_LAN {
            policy allow-pc2-to-sensor-lan {
                match {
                    source-address any;
                    destination-address any;
                    application [ junos-icmp-ping junos-udp-any junos-http my-http-8000 ];
                }
                then {
                    permit;
                }
            }
        }
        from-zone SERVER_LAN to-zone INTER_LAN_1 {
            policy allow-pc2-to-inter-lan {
                match {
                    source-address any;
                    destination-address any;
                    application [ junos-icmp-ping junos-udp-any ];
                }
                then {
                    permit;
                }
            }
        }
        from-zone INTER_LAN_1 to-zone SENSOR_LAN {
            policy allow-inter-lan-to-sensor-lan {
                match {
                    source-address any;
                    destination-address any;
                    application [ junos-icmp-ping junos-udp-any ];
                }
                then {
                    permit;
                }
            }
        }
        from-zone INTER_LAN_1 to-zone SERVER_LAN {
            policy allow-pc4-http-to-webserver {
                match {
                    source-address PC4;
                    destination-address WEB_SERVER;
                    application [ junos-http my-http-8000 ];
                }
                then {
                    permit;
                }
            }
            policy allow-inter-lan-to-server-lan-icmp {
                match {
                    source-address any;
                    destination-address any;
                    application [ junos-icmp-ping junos-udp-any ];
                }
                then {
                    permit;
                }
            }
        }
        default-policy {
            deny-all;
        }
    }
    zones {
        security-zone SENSOR_LAN {
            interfaces {
                ge-0/0/1.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                            traceroute;
                        }
                    }
                }
            }
        }
        security-zone SERVER_LAN {
            interfaces {
                ge-0/0/2.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                            traceroute;
                        }
                    }
                }
            }
        }
        security-zone INTER_LAN_1 {
            interfaces {
                ge-0/0/3.0 {
                    host-inbound-traffic {
                        system-services {
                            ping;
                            traceroute;
                        }
                    }
                }
            }
        }
    }
}

applications {
    application my-http-8000 {
        application-protocol http;
        protocol tcp;
        destination-port 8000;
    }
}